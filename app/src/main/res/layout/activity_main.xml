<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Место дня -->
    <LinearLayout
        android:id="@+id/layout_place_of_the_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:background="@drawable/rounded_corners"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/image_place_of_the_day"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginEnd="25dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="5dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/text_place_of_the_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Место дня:"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginStart="25dp" />
        <TextView
            android:id="@+id/name_of_place_of_the_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="25dp" />

    </LinearLayout>

    <!-- Кнопка "Список всех мест" -->
    <Button
        android:backgroundTint="@color/green"
        android:id="@+id/button_all_places"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_place_of_the_day"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Список всех мест" />


    <!-- Кнопка "Профиль" -->
    <Button
        android:backgroundTint="@color/colorPrimary"

        android:id="@+id/button_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_all_places"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Профиль" />

</RelativeLayout>
