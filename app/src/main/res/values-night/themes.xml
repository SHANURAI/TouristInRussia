<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TouristInRussia" parent="Theme.Material3.DayNight">
        <!-- Customize your light theme here. -->
        <item name="android:fontFamily">@font/font_regular</item>
        <!-- Основные цвета темы -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Цвета текста -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Настройка стиля для ActionBar -->
    <style name="MyActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/colorPrimary</item>
    </style>
    <style name="MyActionBarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">#000000</item> <!-- Цвет текста -->
        <item name="android:textSize">20sp</item> <!-- Размер текста -->
    </style>

    <style name="Theme.TouristInRussia" parent="Base.Theme.TouristInRussia" />
</resources>